{{> head}}
{{> nav}}

<script src="/js/Chart.min.js"></script>
<link rel="stylesheet" href="/js/Chart.min.css">

<div class="container-fluid">

    <div class="row">
        <div class="col-12 pl-md-5 pt-md-2">
            <h1>{{mayusculas nombre}}</h1>
            <h3 class="text-muted">Unidad: {{unidad}}</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-1"></div> 
        <div class="col-10">
            <canvas id="myChart" style="display: block; height: 563px; width: 1127px;" width="1408" height="550" class="chartjs-render-monitor"></canvas>
        </div>
        <div class="col-1"></div> 
    </div>

</div>

<script>
var valores = [];
var textos = [];
{{#each datos}}
valores.push (`{{this.valor}}`);
textos.push (`{{this.fecha}}`);
{{/each}}
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: textos,
        datasets: [{
            label: 'Valor',
            data: valores,
            backgroundColor: 
                'rgba(255, 99, 132, 0.2)',

            borderColor: 
                'rgba(255, 99, 132, 1)' ,

            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>

