
{{> head}}
{{> nav}}

<div class="container-fluid">

    <div class="row">
        {{#each datos}}
        <div class="col-3">
            <div class="card mt-md-2" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{mayusculas this.id}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{this.nombre}}</h6>
                    <p class="card-text margen-menor"><span class="font-valor">{{this.valor}}</span><span class="text-muted">{{this.unidad}}</span></p>
                    <span class="text-muted">{{this.fecha}}</span><br>
                    <a href="/detalles-item/{{this.id}}" class="card-link">Ver Detalle</a>
                </div>
            </div>
         </div>
        {{/each}}
    </div>

</div>

{{> footer}}

